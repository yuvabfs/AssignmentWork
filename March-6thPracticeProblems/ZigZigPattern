package march.practice.problems;

public class ZigZigPattern {

	public static void main(String[] args) {
	
		
		String givenString = "thisisazigzagthisisazigzagthisisazigzag";
		
		int N=11;
		
		
		
		for(int i=0;i<N;i++)
		{
			int printIndex=i,downToUpIndex=i;
			
			for(int j=0;j<givenString.length();j++)
			{
				if(j==printIndex )
				{
					System.out.print(givenString.charAt(printIndex));
					
					printIndex=printIndex+((N-1)*2);
					downToUpIndex=printIndex-(2*i);
				}
				
				if(i>0 && i< N-1 && j==downToUpIndex)
				{
					System.out.print(givenString.charAt(downToUpIndex));
				}
				else
					System.out.print("-");
					
					
					//System.out.print(printIndex);
			}
			System.out.println("");
		}
		
		
		
		
		
		

	}

}
