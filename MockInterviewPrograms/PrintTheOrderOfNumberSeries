package dailyprograms.java;

public class PrintTheOrderOfNumberSeries {

	public static void main(String[] args) {


		System.out.println("Enter the Size of Input n: ");
		
		int[] inputArray= {9,8,4,3,2,1};
		
		int increasing=0,decreasing=0;
		
		for(int i=0;i<inputArray.length-1;i++)
		{
			
				if(inputArray[i]<inputArray[i+1])
					increasing++;
				else
					decreasing++;
			
			
		}
		if(increasing==inputArray.length-1)
			System.out.println("Increasing Order");
		else if(decreasing==inputArray.length-1)
			System.out.println("Decreasing Order");
		else
			System.out.println("Neither Increasing nor decreasing");
		
		
		
	}

}
