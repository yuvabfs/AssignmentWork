package dailyprograms.java;

public class SumOfOddAndEvenNumbers {

	public static void main(String[] args) {


		int[] givenInput= {1,3,4,5,3,2,1,7,8};
		
		int evenSum=0,oddSum=0;
		
		for(int i=0;i<givenInput.length;i++)
		{
			if(givenInput[i]%2==0)
				evenSum=evenSum+givenInput[i];
			else
				oddSum=oddSum+givenInput[i];
		}
		
		System.out.println("Even number Sum is: "+evenSum);
		System.out.println("Odd number Sum is: "+ oddSum);
	}

}
