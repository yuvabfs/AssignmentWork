package org.test;

import java.util.Scanner;

public class ValidPasswordCheck {
	
	
	public static boolean pwdCheck(String x) {
		boolean flag=true;
		int countUpperCase=0,countNumbers=0,countSplChar=0;
		//CONDITION:1 A password must have at least ten characters.
		if(!(x.length()>=10))
			{
			flag=false;
			System.out.println("Err: password must have at least ten characters");
			}
	
		//Traversing each characters in the Password
		char[] ch=x.toCharArray();		
		for(char CHAR : ch)
		{
			if(CHAR>=65 &&CHAR<=90) //ASCII value of Upper case[65-90]
				countUpperCase++;
			if(CHAR>=48 && CHAR<=57)//ASCII value of Number[48-57]
				countNumbers++;
			if(CHAR>=33 && CHAR<=47)//ASCII value of Special Characters[33-47]
				countSplChar++;
			if(CHAR>=58 && CHAR<=64)//ASCII value of Special Characters[58-64]
				countSplChar++;
			if(CHAR>=91 && CHAR<=96)//ASCII value of Special Characters[91-96]
				countSplChar++;
		}
		
		//CONDITION:2 A password must contains at least a UpperCase words
		if(countUpperCase<1) 
		{
			System.out.println("Err: Password must contains at least a UpperCase words");
			flag=false;
		}
		
		//CONDITION: 3 A password must contain at least two numbers.
		if(countNumbers<2)
		{
			System.out.println("Err: Password must contain at least two numbers");
			flag=false;
		}
		//CONDITION: 4 A password must contains at-least a special character.
		if(countSplChar<1)
		{
			System.out.println("Err: Password must contains at-least a special character");
			flag=false;
		}	
		

		//CONDITION: 5 A password must not contains certain collection of common (create your own set of words) words
		String[] CommWords= {"name","admin","password","xxx","pwd","India","Chennai"};
		for(String Word:CommWords)
		{
		if(x.contains(Word))
		{
			System.out.println("Err: Password must not contains common words");
			flag=false;
		}
		}		
		return flag;
	}
	
	
	
	public static void main(String[] args) {
		
		//No. of Password entry = n
		System.out.println("Enter No. of Pwd: ");
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		
		String[] pwd=new String[n];//Password input
		int validCount=0;
		for(int i=0;i<n;i++)
		{
			System.out.print("Enter Password: ");
			pwd[i]=sc.next();
			

			if(pwdCheck(pwd[i]))
			{
			validCount++;
			System.out.println("Valid Password");
			
				//CONDITION: 6 Password should not match previous two!			
				if(validCount>=3)
				{
					if((pwd[i].equals(pwd[i-1]))||(pwd[i].equals(pwd[i-2])))
					System.out.println("But, Password should not match previous two");
				}
			
			}
			
			else
			{
			System.out.println("Invalid Password");	
			}

		}

	}
}
